{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Server Configuration",
    "$id": "Server Configuration",
    "properties": {
        "port": {
            "type": "string",
            "description": "server port"
        },
        "host": {
            "type": "string",
            "default": "localhost"
        },
        "apiPrefix": {
            "type": "string",
            "description": "server port"
        },
        "appID": {
            "type": "string",
            "description": "Unique app id"
        },
        "appName": {
            "type": "string",
            "description": "App name is used as title"
        },
        "appDescription": {
            "type": "string",
            "description": "server port"
        },
        "author": {
            "type": "string",
            "description": "server port"
        },
        "contactEmail": {
            "type": "string",
            "description": "server port"
        },
        "website": {
            "type": "string",
            "description": "server port"
        },
        "organizationHeader": {
            "type": "string",
            "description": "x-organization"
        },
        "scopeHeader": {
            "type": "string",
            "description": "x-scope"
        },
        "deviceIdHeader": {
            "type": "string"
        }
    },
    "required": [
        "port",
        "host",
        "apiPrefix",
        "appID",
        "appName",
        "appDescription",
        "author",
        "contactEmail",
        "website",
        "organizationHeader",
        "scopeHeader"
    ]
}